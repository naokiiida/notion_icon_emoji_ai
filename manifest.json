{
	"manifest_version": 3,
	"name": "Notion Extension",
	"version": "1.0",
	"description": "Run Python script in the background",
	"permissions": [
		"storage"
	  ],
	"host_permissions": [
		"https://www.notion.so/"
	],
	"background": {
	  "service_worker": "background.js"
	},
	"action": {
	  "default_icon": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  },
	  "default_title": "Run Python Script with Flag 1",
	  "default_popup": "popup.html"
	},
	"icons": {
	  "16": "icon.png",
	  "48": "icon.png",
	  "128": "icon.png"
	},
	"content_scripts": [
		{
		  "matches": ["*://*.notion.so/*"],
		  "js": ["content.js"]
		}
	]
  }
  