{
	"manifest_version": 2,
	"name": "Notion Extension",
	"version": "1.0",
	"description": "Run Python script in the background",
	"permissions": ["http://localhost:5000/"],
	"background": {
	  "scripts": ["background.js"],
	  "persistent": false
	},
	"browser_action": {
	  "default_icon": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  },
	  "default_title": "Run Python Script"
	},
	"icons": {
	  "16": "icon.png",
	  "48": "icon.png",
	  "128": "icon.png"
	},
	"action": {
	  "default_icon": {
		"16": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	  },
	  "default_title": "Run Python Script with Flag 1",
	  "default_popup": "popup.html"
	}
  }
  